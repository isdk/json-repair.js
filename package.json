{
  "name": "@isdk/json-repair",
  "version": "0.1.2",
  "description": "A powerful, schema-guided JSON repair library for fixing broken JSON generated by LLMs, featuring semantic coercion and fuzzy matching.",
  "keywords": [
    "json",
    "repair",
    "fix",
    "llm",
    "ai",
    "schema",
    "json-schema",
    "parser",
    "recovery",
    "broken-json",
    "semantic-coercion",
    "fuzzy-matching"
  ],
  "author": "Riceball LEE <snowyu.lee@gmail.com>",
  "homepage": "https://github.com/isdk/json-repair.js",
  "repository": "https://github.com/isdk/json-repair.js",
  "bugs": "https://github.com/@isdk/json-repair.js/issues",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "build-fast": "tsup",
    "build": "pnpm run build-fast --dts-resolve --dts && pnpm run doc:md",
    "clean": "rm -fr web docs dist",
    "doc": "typedoc --plugin none --out web",
    "doc:md": "typedoc --plugin typedoc-plugin-markdown --out docs",
    "format": "pnpm run format:base -c",
    "format:base": "prettier \"src/**/*.{ts,tsx,js,jsx,css,scss,sass,less,md}\"",
    "format:fix": "pnpm run format:base --write",
    "lint": "eslint .",
    "lint:fix": "pnpm run lint --fix",
    "style": "pnpm run format:base -c && pnpm run lint",
    "style:fix": "pnpm run format:fix && npm run lint:fix",
    "test": "vitest run",
    "release": "pnpm run clean && pnpm run build && git add -f docs && git ci -m 'docs: update API docs' && pnpm dlx commit-and-tag-version -s",
    "release.alpha": "pnpm run release -- --prerelease alpha"
  },
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "^15.1.3",
    "lodash-es": "^4.17.23"
  },
  "devDependencies": {
    "@types/json-schema": "^7.0.15",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^25.1.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-tsdoc": "^0.5.0",
    "prettier": "^3.8.1",
    "terser": "^5.46.0",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typedoc": "^0.28.16",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "~5.7.3",
    "vite": "^7.3.1",
    "vite-tsconfig-paths": "^6.0.5",
    "vitest": "^4.0.18"
  }
}
